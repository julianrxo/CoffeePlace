<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/imgProfile"
            android:src="@mipmap/iconplace"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="16dp" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvUserName"
            android:text="@string/perfil_nombre"
            android:textColor="@color/brown_dark"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Correo -->
        <TextView
            android:id="@+id/tvUserEmail"
            android:text="@string/perfil_correo"
            android:textColor="@color/brown_medium"
            android:textSize="14sp"
            android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Cerrar sesiÃ³n -->
        <Button
            android:id="@+id/btnLogout"
            android:text="@string/btn_cerrar_sesion"
            android:backgroundTint="@color/coffee_primary"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- GeolocalizaciÃ³n -->
