<?xml version="1.0" encoding="utf-8"?>
<!-- Pantalla de registro de usuario -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo -->
        <ImageView
            android:src="@mipmap/iconplace"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="16dp" />

        <!-- Título -->
        <TextView
            android:text="@string/registro_titulo"
            android:textColor="@color/brown_dark"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Nombre -->
        <EditText
            android:id="@+id/inputName"
            android:hint="@string/hint_nombre"
            android:backgroundTint="@color/brown_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" />

        <!-- Correo -->
        <EditText
            android:id="@+id/inputEmail"
            android:hint="@string/hint_email"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/brown_light"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" />

        <!-- Contraseña -->
        <EditText
            android:id="@+id/inputPassword"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:backgroundTint="@color/brown_light"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" />

        <!-- Botón registrarse -->
        <Button
            android:id="@+id/btnRegister"
            android:text="@string/btn_registrar"
            android:backgroundTint="@color/coffee_primary"
            android:textColor="@color/white"
            android:layout_marginTop="28dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Enlace a login -->
        <TextView
            android:id="@+id/tvGoLogin"
            android:text="@string/registro_link_login"
            android:textColor="@color/brown_dark"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
