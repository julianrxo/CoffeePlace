<?xml version="1.0" encoding="utf-8"?>
<!-- Pantalla de bienvenida -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/cream_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo principal -->
    <ImageView
        android:src="@mipmap/iconplace"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp" />

    <!-- Título de bienvenida -->
    <TextView
        android:text="@string/bienvenida_titulo"
        android:textColor="@color/brown_dark"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Subtítulo descriptivo -->
    <TextView
        android:text="@string/bienvenida_subtitulo"
        android:textColor="@color/brown_medium"
        android:textSize="16sp"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Botón para ir al login -->
    <Button
        android:id="@+id/btnGoLogin"
        android:text="@string/btn_comenzar"
        android:backgroundTint="@color/coffee_primary"
        android:textColor="@color/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</LinearLayout>